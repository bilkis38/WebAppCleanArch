@model WebAppCleanArch.Domain.Entities.Attendance
@{
    ViewData["Title"] = "Edit Attendance";
}

<h2>Edit Attendance</h2>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group mb-3">
                <label asp-for="StudentId" class="form-label">Participant</label>
                <select asp-for="StudentId" class="form-select" asp-items="ViewBag.Students">
                    <option value="">-- Select Participant --</option>
                </select>
                <span asp-validation-for="StudentId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="AttendanceDate" class="form-label">Date & Time</label>
                <input asp-for="AttendanceDate" class="form-control" type="datetime-local" />
                <span asp-validation-for="AttendanceDate" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Status" class="form-label">Status</label>
                <select asp-for="Status" class="form-select" asp-items="ViewBag.StatusList">
                    <option value="">-- Select Status --</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Notes" class="form-label">Note</label>
                <textarea asp-for="Notes" class="form-control" rows="3" placeholder="Note (optional)"></textarea>
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Update</button>
                <a asp-action="Index" class="btn btn-secondary">Back</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
