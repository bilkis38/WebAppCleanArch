@model WebAppCleanArch.Domain.Entities.Attendance
@{
    ViewData["Title"] = "Delete Attendance";
}

<h2>Delete Attendance</h2>
<hr />

<div class="alert alert-danger">
    <h4>Are you sure you want to delete this attendance record?</h4>
</div>

<div class="row">
    <div class="col-md-6">
        <dl class="row">
            <dt class="col-sm-4">Participant</dt>
            <dd class="col-sm-8">@Model.Student?.Name</dd>

            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.AttendanceDate)</dt>
            <dd class="col-sm-8">@Model.AttendanceDate.ToString("dddd, dd MMMM yyyy")</dd>

            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Status)</dt>
            <dd class="col-sm-8">
                @if (Model.Status == "Present")
                {
                    <span class="badge bg-success">@Model.Status</span>
                }
                else if (Model.Status == "Sick")
                {
                    <span class="badge bg-warning text-dark">@Model.Status</span>
                }
                else if (Model.Status == "Permission")
                {
                    <span class="badge bg-info text-dark">@Model.Status</span>
                }
                else
                {
                    <span class="badge bg-danger">@Model.Status</span>
                }
            </dd>
            
            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Notes)</dt>
            <dd class="col-sm-8">@(string.IsNullOrEmpty(Model.Notes) ? "-" : Model.Notes)</dd>
        </dl>
        
        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>
